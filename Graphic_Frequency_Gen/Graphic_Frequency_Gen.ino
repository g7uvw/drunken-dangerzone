void setup() {
  tft.begin();
  tft.fillScreen(ILI9341_BLACK);
  
  Serial.begin(9600);
  while (!Serial) ; // wait for Arduino Serial Monitor
  Serial.println("ILI9341 Test!"); 

  // read diagnostics (optional but can help debug problems)
  uint8_t x = tft.readcommand8(ILI9341_RDMODE);
  Serial.print("Display Power Mode: 0x"); Serial.println(x, HEX);
  x = tft.readcommand8(ILI9341_RDMADCTL);
  Serial.print("MADCTL Mode: 0x"); Serial.println(x, HEX);
  x = tft.readcommand8(ILI9341_RDPIXFMT);
  Serial.print("Pixel Format: 0x"); Serial.println(x, HEX);
  x = tft.readcommand8(ILI9341_RDIMGFMT);
  Serial.print("Image Format: 0x"); Serial.println(x, HEX);
  x = tft.readcommand8(ILI9341_RDSELFDIAG);
  Serial.print("Self Diagnostic: 0x"); Serial.println(x, HEX); 
  
}

void Draw_Keypad(void)
{
  //Draw the Result Box
  tft.fillRect(0, 0, 240, 80, ILI9341_BLACK);

  //Draw First Column
  tft.fillRect  (0,260,60,60,ILI9341_LIGHTGREY);
  tft.fillRect  (0,200,60,60,ILI9341_LIGHTGREY);
  tft.fillRect  (0,140,60,60,ILI9341_LIGHTGREY);
  tft.fillRect  (0,80,60,60,ILI9341_LIGHTGREY);
  
  //Draw Third Column 
  tft.fillRect  (120,260,60,60,ILI9341_LIGHTGREY);
  tft.fillRect  (120,200,60,60,ILI9341_LIGHTGREY);
  tft.fillRect  (120,140,60,60,ILI9341_LIGHTGREY);
  tft.fillRect  (120,80,60,60,ILI9341_LIGHTGREY);
  
  //Draw Secound & Fourth Column 
  for (int b=260; b>=80; b-=60)
    { 
      tft.fillRect  (180,b,60,60,ILI9341_ORANGE);
      tft.fillRect  (60,b,60,60,ILI9341_LIGHTGREY);
    }

  //Draw Horizontal Lines
  for (int h=80; h<=320; h+=60)
    tft.drawFastHLine(0, h, 240, ILI9341_BLACK);

  //Draw Vertical Lines
  for (int v=60; v<=240; v+=60)
  {
    if (v <= 60)
      tft.drawFastVLine(v, 80, 180, ILI9341_BLACK);
    else
      tft.drawFastVLine(v, 80, 240, ILI9341_BLACK);  
  }
    //tft.drawFastVLine(v, 80, 240, ILI9341_BLACK);
    //tft.drawFastVLine(v, 80, 180, ILI9341_BLACK);

//Display keypad lables
  for (int j=0;j<4;j++) {
    for (int i=0;i<4;i++) {
      tft.setCursor(22 + (60*i), 100 + (60*j));
      tft.setTextSize(3);
      tft.setTextColor(ILI9341_WHITE);
      tft.println(symbol[j][i]);
    }
  }
}


